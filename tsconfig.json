{
  "compilerOptions": {
    // "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "noEmitHelpers": false,
    // "noEmitOnError": false,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es6",
      "es2015",
      "es2016",
      "es2017"
    ]
  },

  "exclude": [
    "node_modules"
  ],
  "include": [ "**/*.ts" ],

  "typeAcquisition": {
    "enable": true
  }
}
